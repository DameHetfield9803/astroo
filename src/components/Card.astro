---
const { title, body, footer } = Astro.props;
---
<div class="p-5 mx-auto text-center gap-4 dark:bg-white rounded-lg dark:text-black w-fit text-wrap mt-3" id="card">
    <h1 class="text-3xl font-light">{title}</h1>
    <p>
        {body}
    </p>
    <footer>
        {footer}
    </footer>
</div>